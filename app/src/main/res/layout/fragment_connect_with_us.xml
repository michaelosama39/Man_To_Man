<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.ConnectWithUsFragment">

    <TextView
        android:id="@+id/phone_TV_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="phone"
        android:textSize="25sp"
        android:textColor="@color/logo"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/phoneNumber_TV_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01286008357  "
        android:textSize="17sp"
        android:textColor="@color/logo"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/email_TV_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textSize="25sp"
        android:textColor="@color/logo"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/emailText_TV_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="maikl.osama39@gmail.com  "
        android:textSize="15sp"
        android:textColor="@color/logo"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="40dp">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:src="@drawable/instagram" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:src="@drawable/youtube"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter"/>

    </LinearLayout>

    <EditText
        android:id="@+id/titleMasg_ET_connect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="     عنوان الرساله"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/masg_ET_connect"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="     نص الرساله"
        android:textColor="@color/logo"
        android:gravity="clip_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/send_BTN_connect"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="send"
        android:textSize="20sp"
        android:textColor="@color/logo"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>

</LinearLayout>