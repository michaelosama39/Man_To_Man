<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo"
    tools:context=".view.fragment.LoginFragment">

    <ImageView
        android:id="@+id/logo_IV_login"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/man_to_man"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/email_ET_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/curve_white"
        android:hint="Enter your email"
        android:layout_margin="10dp"
        android:layout_below="@id/logo_IV_login"/>

    <EditText
        android:id="@+id/password_ET_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/curve_white"
        android:hint="Enter your password"
        android:layout_margin="10dp"
        android:layout_below="@id/email_ET_login"/>

    <Button
        android:id="@+id/enter_BTN_login"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="enter"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/logo"
        android:background="@drawable/curve_white"
        android:layout_below="@id/password_ET_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/forgetPassward_TV_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Passward !?"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/enter_BTN_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/or_TV_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------------------OR-------------------"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/forgetPassward_TV_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/createNewAccount_BTN_login"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:text="create new account"
        android:textColor="@color/logo"
        android:textStyle="bold"
        android:background="@color/white"
        android:layout_below="@id/or_TV_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>